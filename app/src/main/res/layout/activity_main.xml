<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.YanyiActivity">

    <ImageView
        android:id="@+id/yy_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/yy_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yanyi_bg_selector"
        android:padding="20dp"
        android:text="开启红包统计服务"
        android:textColor="@color/text_titles_selector"

        android:textSize="16sp" />

    <TextView
        android:id="@+id/yy_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yy_start"
        android:background="@drawable/yanyi_bg_selector"
        android:padding="20dp"
        android:text="查看红包统计服务"
        android:textColor="@color/text_titles_selector"
        android:textSize="16sp" />
</RelativeLayout>
